# =============================================================================
# LOCK MONITOR APPLICATION - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# =============================================================================
# E-Schloss CLOUD API CREDENTIALS
# =============================================================================
CLOUD_EMAIL=Mail bei Burg
CLOUD_PASSWORD=pw bei Burg
CLOUD_BASE_URL=https://[API-des-Anbieters]/rest

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Comma-separated list of organization units to monitor (room IDs or location IDs)
MONITORED_UNITS=379,380,381

# Comma-separated list of location IDs for whitelist management
WHITELIST_LOCATIONS=6996


# =============================================================================
# STRIKE SYSTEM SETTINGS
# =============================================================================
# Hours a lock must be closed before it's considered a violation
VIOLATION_HOURS=48

# Hours to wait before allowing a new strike for the same user
STRIKE_COOLDOWN_HOURS=48

# Days after which old strikes are automatically deleted
STRIKE_CLEANUP_DAYS=90

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Path to SQLite database file
DATABASE_PATH=data/app_database.db

# Path to Excel file containing user information
EXCEL_USER_DATABASE=data/users.xlsx

# Excel column names (adjust to match your Excel file structure)
EXCEL_COL_SUPERVISOR=A
EXCEL_COL_GENDER=B
EXCEL_COL_FIRSTNAME=D
EXCEL_COL_LASTNAME=E
EXCEL_COL_UID=K

# Excel worksheet names (comma-separated if multiple sheets)
EXCEL_WORKSHEETS=1,2

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP server settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true

# Email credentials
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Email sender information
EMAIL_FROM=spindmanagement@spinde.de
EMAIL_FROM_NAME=Lock Monitor System

# Email subject lines (optional - defaults will be used if not set)
EMAIL_SUBJECT_STRIKE1=Erinnerung: Schloss nicht ordnungsgemäß verschlossen
EMAIL_SUBJECT_STRIKE2=Wichtige Erinnerung: Wiederholter Verstoß gegen Schließregeln
EMAIL_SUBJECT_STRIKE3=Kartenzugang deaktiviert - Dringender Handlungsbedarf

# =============================================================================
# SCHEDULER CONFIGURATION
# =============================================================================
# Daily check time (24-hour format)
DAILY_CHECK_HOUR=0
DAILY_CHECK_MINUTE=0

# Weekly cleanup schedule (0=Monday, 6=Sunday)
CLEANUP_DAY_OF_WEEK=0
CLEANUP_HOUR=1
CLEANUP_MINUTE=0

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/lock_monitor.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# DEVELOPMENT/TESTING
# =============================================================================
# Set to true to enable test mode (no actual emails sent, etc.)
TEST_MODE=false

# Email address to send all test emails to (only used when TEST_MODE=true)
TEST_EMAIL_RECIPIENT=test@example.com

# Enable debug logging
DEBUG=false
